    <script>
        function toggleFlip(button) {
            const card = button.closest('.magazine-card');
            card.classList.toggle('flipped');
        }

        function searchMagazine(magazine, query) {
    if (!query.trim()) {
        alert('Please enter a search term.');
        return;
    }
    
    const searchLinks = {
        'ceramics': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99748401861',
        'artforum': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99900010963601861',
        'craft': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99900011063901861',
        'aia': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99900011263401861',
        'aperture': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99823001861',
        'artnews': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma993751801861',
        'downbeat': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99900011261501861',
        'newyorker': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99620501861',
        'poetrynw': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99900010963001861',
        'rollingstone': 'https://alliance-clark.primo.exlibrisgroup.com/permalink/01ALLIANCE_CC/1gf6rsg/alma99900011262101861'
    };
    
    if (searchLinks[magazine]) {
        window.open(searchLinks[magazine] + '?query=' + encodeURIComponent(query), '_blank');
    }
}

        // Keyboard navigation for card flipping
        document.querySelectorAll('.magazine-card').forEach(card => {
            card.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    card.classList.toggle('flipped');
                }
            });
        });
    </script>
